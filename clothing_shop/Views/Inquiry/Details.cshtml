@model Shop_Models.ViewModels.InquiryVM

<form method="post">
    <input hidden asp-for="InquiryHeader.Id" />
    <br />
    <div class="backgroundWhite container">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center bg-dark text-light">
                <span style="font-weight: bold;">Order Summary</span>
                <a asp-action="Index" class="btn btn-outline-light">Back to Inquiry</a>
            </div>
            <div class="card-body pb-0">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span>PickUp Details:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Name</div>
                                <div class="col-9">
                                    <p>@Model.InquiryHeader.FullName</p>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Phone</div>
                                <div class="col-9">
                                    <p>@Model.InquiryHeader.PhoneNumber</p>
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                    <p>@Model.InquiryHeader.Email</p>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Street Address</div>
                                <div class="col-9">
                                    <p>@Model.InquiryHeader.StreetAddress</p>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">City</div>
                                <div class="col-9">
                                    <p>@Model.InquiryHeader.City</p>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">State</div>
                                <div class="col-9">
                                    <p>@Model.InquiryHeader.State</p>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Postal Code</div>
                                <div class="col-9">
                                    <p>@Model.InquiryHeader.PostalCode</p>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Inquiry Date</div>
                                <div class="col-9">
                                    <p>@Model.InquiryHeader.InquiryDate.ToShortDateString()</p>
                                    
                                </div>
                            </div>

                            <div class="row my-1 pt-2">
                                <div class="col-9 offset-3">
                                    <div class="row">

                                        <div class="col">
                                            <input type="submit" value="Delete" class="btn btn-danger form-control"
                                                   formaction="/Inquiry/Delete" formmethod="post" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span>Order Summary</span>
                            </h4>
                            <ul class="list-group mb-3">
                                @{
                                    var orderTotal = 0.0;
                                }
                                @foreach (var prod in Model.InquiryDetail)
                                {
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">

                                                <h6 class="my-0">@prod.Product.ProductName</h6>
                                                <small class="text-muted">Size: @prod.Size.Name</small>&nbsp;&nbsp;
                                                <small class="text-muted">Qty: @prod.Qty</small>&nbsp;&nbsp;
                                                <small class="text-muted">Price: €@(prod.Product.Price * prod.Qty)</small><br />
                                            </div>
                                            <div class="col-4">
                                            </div>
                                        </div>
                                    </li>
                                    orderTotal += prod.Product.Price * prod.Qty;
                                }
                                <li class="list-group-item d-flex justify-content-between bg-light">
                                    <small class="text-dark"> Total (EUR)</small>
                                    <strong class="text-dark">€@orderTotal</strong>
                                </li>
                            </ul>
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>